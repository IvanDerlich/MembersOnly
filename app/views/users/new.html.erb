<% #provide(:title, "Create Post") %>
<div class="row pt-4">
  <div class="col-md-4 col-md-offset-3 mx-auto">
    <section class="register-form"> 
      <h1>New Member</h1>  
      <%= form_for(:user, url: users_url) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control mb-3' %> 

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control mb-3' %> 


        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control mb-3' %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control mb-3' %>

        <div class="d-flex justify-content-center"> 
          <%= f.submit "Join Club", class: "btn btn-primary w-50" %>
        </div>
        
      <% end %>
    </section>
  </div>
</div>

